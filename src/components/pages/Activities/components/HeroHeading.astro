---
import Avatar from "@components/ui/Avatar.astro";
import AvatarGroup from "@components/ui/AvatarGroup.astro";
---

<header>
  <h1>Fin de año 2025</h1>
  <AvatarGroup>
    <Avatar name="Antonio" size="small" />
    <Avatar name="Pepe" size="small" />
    <Avatar name="María" size="small" />
  </AvatarGroup>
</header>

<style>
  header {
    background: #2aaf8a;
    margin: -1rem -1rem 1rem;
    padding: 1rem;
    height: 25vh;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
</style>
