---
interface Props {
  name: string;
  id: string;
  value?: string;
  minDate: string;
  maxDate: string;
}

const { value, name, id, minDate, maxDate } = Astro.props;
---

<input
  type="date"
  id={id}
  name={name}
  value={value}
  min={minDate}
  max={maxDate}
/>

<style>
  input {
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    border-radius: 0.5rem;
    height: 40px;
    font-size: 1rem;
  }
</style>
