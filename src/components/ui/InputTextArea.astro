---
interface Props {
  placeholder: string;
  name: string;
  id: string;
  value?: string;
  rows?: number;
}

const { placeholder, name, id, value, rows } = Astro.props;
---

<textarea
  name="textarea"
  name={name}
  id={id}
  rows={rows || 3}
  placeholder={placeholder}>{value}</textarea
>

<style>
  textarea {
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    border-radius: 0.5rem;
    font-size: 1rem;
  }
</style>
