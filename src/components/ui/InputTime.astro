---
interface Props {
  name: string;
  id: string;
  value?: string;
}

const { name, id, value } = Astro.props;
---

<input type="time" name={name} id={id} value={value} />

<style>
  input {
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    border-radius: 0.5rem;
    height: 40px;
    font-size: 1rem;
  }
</style>
