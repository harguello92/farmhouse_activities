---
interface Props {
  placeholder: string;
  name: string;
  id: string;
}

const { placeholder, name, id } = Astro.props;
---

<input type="text" placeholder={placeholder} name={name} id={id} />

<style>
  input {
    padding: 0.5rem 1rem;
    border: 1px solid #000;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    height: 40px;
    font-size: 1rem;
  }
</style>
