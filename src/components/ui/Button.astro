---
interface Props {
  type: "submit" | "reset" | "button" | null | undefined;
}

const { type } = Astro.props;
---

<button type={type}>
  <slot />
</button>

<style>
  button {
    background: #000;
    color: #fff;
    padding: 1rem 2rem;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    font-size: 1rem;
  }
</style>
